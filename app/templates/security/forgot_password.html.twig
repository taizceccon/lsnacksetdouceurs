{# templates/security/forgot_password.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Leila Snacks{% endblock %}

{% block body %}
<div class="flex items-center justify-center bg-white dark:bg-[#333] py-6 px-4 sm:px-6 lg:px-8 flex-grow">
    <div class="max-w-md w-full bg-white dark:bg-[#333] p-8 rounded-lg shadow-xl border border-jaunePale space-y-6">
        <h2 class="text-2xl font-bold text-roseFonce">Mot de passe oublié</h2>
        <p class="mt-1 text-sm text-vertSauge">Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.</p>

        {% for message in app.flashes('success') %}
            <div class="flash-success bg-green-100 text-green-800 px-4 py-2 rounded text-sm mb-4 max-w-md mx-auto">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="flash-error bg-red-100 text-red-700 px-4 py-2 rounded text-sm mb-4 max-w-md mx-auto">
                {{ message }}
            </div>
        {% endfor %}

        <form method="post">
            <div>
                <label for="email" class="block text-sm font-medium text-rose-400">Adresse e-mail</label>
                <input type="email" name="email" id="email" required autofocus
                       class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm text-gray-700 focus:outline-none focus:ring-bleuMenthe focus:border-bleuMenthe">
            </div>

            <div class="mt-6">
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-vertSauge hover:bg-bleuMenthe focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-roseFonce transition">
                    Envoyer le lien de réinitialisation
                </button>
            </div>
        </form>

        <p class="mt-4 text-center text-sm text-rose-400">
            Vous vous souvenez de votre mot de passe ? <a href="{{ path('app_login') }}" class="text-roseFonce hover:text-bleuMenthe font-medium">Se connecter</a>
        </p>
    </div>
</div>
{% endblock %}