{% extends 'base.html.twig' %}

{% block title %} Liste des commandes {% endblock %}

{% block meta %}
  <meta name="description" content="Commandes - Découvrez nos snacks faits maison, sucrés et salés, livrés avec soin.">
  <meta property="og:title" content="Snacks Artisanaux - Leila" />
{% endblock %}

{% block body %}

    <h1 class="text-3xl font-bold text-center mb-6">Liste des commandes</h1>
    
    <!-- Vue Desktop -->
    <div class="hidden sm:block overflow-x-auto max-w-4xl w-full mx-auto px-4 sm:px-0">
    <table class="w-full table-auto border-collapse">
            <thead class="bg-gray-100 dark:bg-[#2c2c2c] text-gray-900 dark:text-gray-300 border-b border-gray-300 dark:border-gray-600">
                <tr>
                    <th class="p-2 border border-gray-300 dark:border-gray-600">ID</th>
                    <th class="p-2 border border-gray-300 dark:border-gray-600">Client</th>
                    <th class="p-2 border border-gray-300 dark:border-gray-600">Total</th>
                    <th class="p-2 border border-gray-300 dark:border-gray-600">Date</th>
                    <th class="p-2 border border-gray-300 dark:border-gray-600">Status</th>
                    <th class="p-2 border border-gray-300 dark:border-gray-600">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% if orders|length == 0 %}
                    <p class="text-center text-gray-600 dark:text-gray-400 mt-4">Aucune commande disponible.</p>
                {% endif %}
                {% for order in orders %}
                    <tr class="bg-white dark:bg-[#2c2c2c] text-gray-900 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-[#3a3a3a]">
                        <td class="p-2 border border-gray-300 dark:border-gray-600">{{ order.id }}</td>
                        <td class="p-2 border border-gray-300 dark:border-gray-600">{{ order.user.email }}</td>
                        <td class="p-2 border border-gray-300 dark:border-gray-600">{{ order.totalInEuros|number_format(2, ',', ' ') }} €</td>
                        <td class="p-2 border border-gray-300 dark:border-gray-600">{{ order.createdAt|date('d/m/Y H:i') }}</td>
                        <td class="p-2 border border-gray-300 dark:border-gray-600">{{ order.status }}</td>
                        <td class="p-2 border border-gray-300 dark:border-gray-600">
                            <a href="{{ path('order_show', {'id': order.id}) }}" class="text-rose-600 hover:text-rose-400 transition duration-300">Voir</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

        <!-- Vue Mobile -->
        <div class="space-y-4 sm:hidden max-w-md w-full mx-auto px-4">
        {% if orders|length == 0 %}
            <p class="text-center text-gray-600 dark:text-gray-400 mt-4">Aucune commande disponible.</p>
        {% endif %}
        {% for order in orders %}
            <div class="p-4 border rounded-lg bg-gray-50 dark:bg-[#1f1f1f]">
                <p><span class="font-semibold">Commande :</span> #{{ order.id }}</p>
                <p><span class="font-semibold">Client :</span> {{ order.user.email }}</p>
                <p><span class="font-semibold">Total :</span> {{ order.totalInEuros|number_format(2, ',', ' ') }} €</p>
                <p><span class="font-semibold">Date :</span> {{ order.createdAt|date('d/m/Y H:i') }}</p>
                <p><span class="font-semibold">Statut :</span> {{ order.status }}</p>
                <a href="{{ path('order_show', {'id': order.id}) }}" class="inline-block mt-2 text-rose-600 hover:text-rose-400">Voir</a>
            </div>
        {% endfor %}

{% endblock %}
