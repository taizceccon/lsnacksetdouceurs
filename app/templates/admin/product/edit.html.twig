{% extends 'base.html.twig' %}

{% block title %}{{ product.titre }} - Leila Snacks{% endblock %}

{% block meta %}
  <meta name="description" content="D√©couvrez nos snacks faits maison, sucr√©s et sal√©s, livr√©s avec soin.">
  <meta property="og:title" content="Snacks Artisanaux - Leila" />
{% endblock %}

{% block body %}
    <section class="banner-contact bg-pink-100 py-12 text-center rounded-md mb-10">
        <h1 class="text-4xl font-cursive text-pink-700 mb-4">Modifier le produit</h1>
        <p class="text-pink-800 max-w-2xl mx-auto text-lg">
            Apportez une touche finale √† votre gourmandise en mettant √† jour ce produit avec soin üç¨
        </p>
    </section>

    <div class="contact-form max-w-lg mx-auto bg-white p-8 rounded shadow">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success mb-6 rounded bg-green-100 p-4 text-green-700 font-semibold">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form) }}

            {% for field in form %}
                {% if field.vars.name != '_token' %}
                    <div class="form-group mb-4">
                        {{ form_label(field, null, {'label_attr': {'class': 'font-semibold'}}) }}
                        {{ form_widget(field, {'attr': {'class': 'border border-pink-300 rounded w-full p-2'}}) }}
                        {{ form_errors(field) }}
                    </div>
                {% endif %}
            {% endfor %}

            <div class="form-group text-center">
                <button class="bg-rose-400 hover:bg-pink-700 text-white px-6 py-2 rounded cursor-pointer">
                     Enregistrer les modifications
                </button>
            </div>

        {{ form_end(form) }}
    </div>
{% endblock %}