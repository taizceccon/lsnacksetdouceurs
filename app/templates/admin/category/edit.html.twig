{% extends 'base.html.twig' %}

{% block title %}Modifier la catégorie - Douceurs & Snacks de Leila{% endblock %}

{% block body %}
<section class="text-center py-5 bg-gray-100 dark:bg-stone-700">
    <h1 class="text-3xl font-cursive text-gray-900 dark:text-gray-100">Modifier une catégorie</h1>
    <p class="text-gray-700 dark:text-gray-300">Mettez à jour le nom de votre délicieuse collection</p>
</section>

<section class="container mx-auto py-10 max-w-xl" role="main" aria-labelledby="edit-category-title">
    <h2 id="edit-category-title" class="sr-only">Formulaire de modification de catégorie</h2>    

    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
         <div class="mb-4">
            {{ form_label(form.category, 'Categorie: ', {'label_attr': {'class': 'block text-gray-800 dark:text-white font-semibold mb-1'}}) }}
            {{ form_widget(form.category, {'attr': {'class': 'w-full px-4 py-2 border rounded focus:outline-none focus:ring dark:bg-stone-700 dark:border-gray-600 dark:text-white'}}) }}
            {{ form_errors(form.category) }}
        </div> 
            <button class="bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded shadow">Enregistrer</button>
       
    {{ form_end(form) }}

    <div class="mt-6">
        <a href="{{ path('admin_category_index') }}" class="text-gray-700 dark:text-gray-300 hover:underline focus:outline-none focus:ring-2 focus:ring-emerald-600 dark:focus:ring-emerald-400"
           aria-label="Retour à la liste des catégories" >
            ← Retour à la liste
        </a>
    </div>
</section>
{% endblock %}