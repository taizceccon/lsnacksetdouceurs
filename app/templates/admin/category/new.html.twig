{% extends 'base.html.twig' %}

{% block title %}Nouvelle catégorie - Douceurs & Snacks de Leila{% endblock %}

{% block body %}
<section class="text-center py-6 bg-pink-100 dark:bg-stone-900">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white font-cursive">Ajouter une catégorie</h1>
    <p class="text-pink-800 dark:text-pink-300">Créez une nouvelle catégorie </p>
</section>

<section class="container mx-auto py-10 max-w-xl px-4">
    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        <div>
            {{ form_label(form.category, 'Catégorie', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-200'}}) }}
            {{ form_widget(form.category, {'attr': {'class': 'mt-1 block w-full rounded-md border border-gray-300 dark:border-gray-600 shadow-sm px-4 py-2 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-pink-400' }}) }}
            {{ form_errors(form.category) }}
        </div>
        <button class="bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded shadow transition focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500">
            Créer
        </button>
    {{ form_end(form) }}

    <div class="mt-6">
        <a href="{{ path('admin_category_index') }}" class="text-pink-600 dark:text-pink-400 hover:underline text-sm">
            ← Retour à la liste
        </a>
    </div>
</section>
{% endblock %}