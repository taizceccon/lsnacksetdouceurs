{% extends 'base.html.twig' %}

{% block title %}Snacks & Douceurs de Leila{% endblock %}

{% block meta %}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="description" content="Découvrez nos snacks faits maison, sucrés et salés, livrés avec soin.">
<meta property="og:title" content="Snacks Artisanaux - Leila" />
{% endblock %}

{% block body %}

<section class="banner-contact bg-menthe dark:bg-roseFonce py-16 sm:py-20 text-center rounded-md mb-12 px-4 sm:px-6">
    <h1 id="contact-heading" class="text-4xl sm:text-5xl font-script text-rose-100 dark:text-[#EDCC8B] mb-4">
       {{ category.category }} 
    </h1>
    <p class="max-w-3xl mx-auto text-lg sm:text-xl text-rose-100 dark:text-[#EDCC8B]">
         Des snacks raffinés et savoureux, pensés pour combler les envies les plus exigeantes!
    </p>
</section>
<!-- Section produits -->
<section class="px-4 sm:px-6 lg:px-8 mx-auto max-w-7xl py-10">
    {% if category %}
       <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {% for product in category.products %}
             <div class="bg-creme dark:bg-fondDark rounded-xl shadow-md hover:shadow-xl transition p-4 flex flex-col items-center text-center">                    
                {% if product.image %}
                    <a href="{{ path('product_show', {'id': product.id}) }}">
                        <img src="{{ asset('uploads/images/' ~ product.image) }}" alt="{{ product.titre }}"  loading="lazy" decoding="async" class="mx-auto rounded-lg mb-4 w-full h-48 object-cover transform hover:scale-105 transition duration-300" width="300" height="200"> </a>
                {% else %}
                    <span class="text-gray-400 dark:text-gray-500 italic mb-4">Pas d'image</span>                     
                {% endif %}
                
                <h3 class="font-bold text-lg md:text-xl hover:underline cursor-pointer mb-2 dark:text-texteClair">{{ product.titre }}</h3>
                <p class="text-sm md:text-base mb-2 dark:text-texteClair">
                    {{ product.description|length > 100 ? product.description[:100] ~ '...' : product.description }}
                </p>
                
                {% if product.urlvideo %}
                    <a href="{{ product.urlvideo }}" target="_blank" rel="noopener noreferrer" class="text-bleuMenthe dark:text-bleuMenthe underline block mb-2">Voir la vidéo</a>
                {% endif %}
                
                <form action="{{ path('cart_add') }}" method="POST" class="mt-auto w-full add-to-cart-form">
                    <input type="hidden" name="product_id" value="{{ product.id }}">
                    <label for="quantity-{{ product.id }}" class="sr-only">Quantité pour {{ product.titre }}</label>
                    <div class="flex items-center justify-center gap-2 mb-4">
                        <span class="text-sm dark:text-texteClair">Quantité:</span>
                        <input id="quantity-{{ product.id }}" type="number" name="quantity" value="1" min="1" 
                                class="dark:bg-[#1e1e1e] dark:text-texteClair border rounded w-16 text-center focus:ring-2 focus:ring-menthe transition" 
                                aria-label="Quantité pour {{ product.titre }}">
                    </div>
                    <button type="submit" class="btn w-full flex items-center justify-center" aria-label="Ajouter {{ product.titre }} au panier">
                        <i class="fas fa-basket-shopping mr-2" aria-hidden="true"></i> Ajouter
                    </button>
                </form>
            </div>
        {% endfor %}
    </div>
    {% else %}
        <p class="text-center text-gray-600 dark:text-texteClair">
            La catégorie {{ category.category }} n'existe pas ou a été désactivée.
        </p>
    {% endif %}
</section>

{% endblock %}